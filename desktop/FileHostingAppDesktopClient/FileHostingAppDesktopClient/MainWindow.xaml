<Window x:Class="FileHostingAppDesktopClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileHostingAppDesktopClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel Margin="10,20,10,20">
            <Button Margin="0,0,0,10" Width="Auto" DockPanel.Dock="Left" Height="40" Click="SettingsButtonClick">
                <TextBlock>Base<LineBreak/>Folder</TextBlock>
            </Button>
            <Button Click="SyncButton_Click" Margin="0,10,0,10" DockPanel.Dock="Left" Height="40">
                Sync
            </Button>
        </StackPanel>            
        
        <TextBox x:Name="logTextBox" TextWrapping="Wrap" ScrollViewer.CanContentScroll="True" Margin="0,20,20,20" DockPanel.Dock="Right"/>
        
    </DockPanel>
</Window>
