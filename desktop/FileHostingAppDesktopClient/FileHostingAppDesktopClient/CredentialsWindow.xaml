<Window x:Class="FileHostingAppDesktopClient.CredentialsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileHostingAppDesktopClient"
        mc:Ignorable="d"
        Title="Sign in" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10,10,10,10">
            <Label>Email:</Label>
            <TextBox x:Name="textBoxEmail">
                
            </TextBox>

            <Label>Password:</Label>
            <PasswordBox x:Name="textBoxPassword">

            </PasswordBox>
            <Button Click="SaveCredentialsButtonClick" Margin="0,10,0,0" IsDefault="True">
                Sign in
            </Button>
            
        </StackPanel>
        
    </Grid>
</Window>
